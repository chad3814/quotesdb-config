# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

# Basic Configuration
aws_region         = "us-east-2"
environment        = "staging"
project_name       = "quotesdb"

# Kubernetes Cluster Configuration
cluster_name       = "quotesdb-k8s"
master_instance_type = "t3.medium"
worker_instance_type = "t3.medium"
worker_count       = 2

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-2a", "us-east-2b"]
ssh_allowed_ips    = ["YOUR_IP_ADDRESS/32"]  # Replace with your IP for SSH access

# EC2 Configuration
key_name           = "your-aws-key-pair-name"  # Must exist in AWS

# Note: Database now runs on Kubernetes cluster
# No RDS configuration needed

# Optional: HTTPS Configuration
# acm_certificate_arn = "arn:aws:acm:us-east-2:ACCOUNT:certificate/xxx"  # Leave empty for HTTP only

# For production environment, use larger instances:
# master_instance_type = "t3.large"
# worker_instance_type = "t3.large"
# worker_count       = 3
# database_instance_class = "db.t3.small"